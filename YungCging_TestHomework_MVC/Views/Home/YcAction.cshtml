@model YungCging_TestHomework_MVC.Models.DataSet_UserData

@{
    ViewBag.Title = "Yc Aplication";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Yc Application</h2>
<div class="col-md-12">

    @using (Html.BeginForm("YCAction_Create", "Home", FormMethod.Post))
    {
        <div class="col-lg-6">
            <div class="form-group">
                <label for="exampleInputEmail1">帳號</label>
                @Html.TextBoxFor(Model => Model.Account);
                <small id="emailHelp" class="form-text text-muted">請輸入用戶者的帳號</small>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">密碼</label>
                <input type="text" class="form-control" id="score" name="score" aria-describedby="emailHelp" placeholder="請輸入密碼" value="@Model.Password">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">姓名</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="請輸入用戶者的姓名" value="@Model.Name">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">年紀</label>
                <input type="text" class="form-control" id="score" name="score" aria-describedby="emailHelp" placeholder="請輸入用戶者年紀" value="@Model.Age">
            </div>
        </div>

        <div class="col-lg-6">
            <button type="submit">c</button>
            <p><a class="btn btn-primary" href="@Url.Action("YCAction_Create","Home")">CreateUser</a></p>
            <p><a class="btn btn-primary" href="@Url.Action("YCAction_Update","Home")">UpdateUser</a></p>
            <p><a class="btn btn-primary" href="@Url.Action("YCAction_Delete","Home")">DeleteUser</a></p>
            <p><a class="btn btn-primary" href="@Url.Action("YCAction_Read","Home")">ReadUser</a></p>
        </div>
    }
</div>

